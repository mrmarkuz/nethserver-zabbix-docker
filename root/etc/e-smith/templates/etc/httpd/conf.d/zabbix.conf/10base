#
# Zabbix monitoring system reverse proxy
#

<VirtualHost *:80>
    IncludeOptional conf.d/default-virtualhost.inc
</VirtualHost>

<VirtualHost *:443>
    ServerName { $zabbix{VirtualHost} || "zabbix.".$DomainName }
    SSLEngine On
    ProxyPassMatch ^/.well-known/acme-challenge/ !
    ProxyPass  / http://localhost:8080/ max=3 retry=30
    ProxyPassReverse / http://localhost:8080/
    ProxyPreserveHost On
    <Location "/">
      <RequireAll>
        Require all granted
      </RequireAll>
    </Location>
</VirtualHost>

<VirtualHost *:80>
    ServerName { $zabbix{VirtualHost} || "zabbix.".$DomainName }
    ProxyPassMatch ^/.well-known/acme-challenge/ !
    ProxyPass  / http://localhost:8080/ max=3 retry=30
    ProxyPassReverse / http://localhost:8080/
    ProxyPreserveHost On
    <Location "/">
      <RequireAll>
        Require all granted
      </RequireAll>
    </Location>
</VirtualHost>
